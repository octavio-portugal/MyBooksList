<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imv_background_categories_item"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/shape_bcg_card_details_books"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_title_categorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Categorie"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_background_categories_item"
        app:layout_constraintTop_toTopOf="@id/imv_background_categories_item"
        app:layout_constraintStart_toStartOf="@id/imv_background_categories_item"
        app:layout_constraintEnd_toEndOf="@id/imv_background_categories_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>