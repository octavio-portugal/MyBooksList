<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_imv_app_icon_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imv_app_icon_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nyt_icon"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edtx_email"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="E-mail"
        android:textColorHint="@color/black70"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="100dp"
        android:background="@color/white_70"
        app:layout_constraintTop_toBottomOf="@id/card_imv_app_icon_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtx_senha"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="Senha"
        android:textColorHint="@color/black70"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:password="true"
        android:layout_marginTop="20dp"
        android:background="@color/white_70"
        app:layout_constraintTop_toBottomOf="@id/edtx_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Entrar"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_bcg_card_details_books"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtx_senha"/>

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/btn_entrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>